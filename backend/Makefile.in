DESTDIR		:= 

CC		= @CC@
RM		= @RM@
MV		= @MV@
CP		= @CP@
INSTALL		= @INSTALL@
PREFIX		= @prefix@
BIN		= atheme@EXEEXT@
MKDEP		= @MKDEP@ -DPREFIX=\"@prefix@\" -I../include @PGINC@ @MYINC@
PICFLAGS	= @PICFLAGS@
CFLAGS		= @CFLAGS@ -I../include @PGINC@ @MYINC@

VERSION		= 0.1

LIBS		= @LIBS@ @PQLIB@ @MYLIB@
LDFLAGS		= @LDFLAGS@
CPPFLAGS	= @CPPFLAGS@

default: all

BASE_SRCS = flatfile.c @POSTGRESQL_C@ @MYSQL_C@

SRCS = ${BASE_SRCS}

OBJS = ${SRCS:.c=.so}

all: protocols

build: all

install: build
	${INSTALL} -d $(DESTDIR)${PREFIX}/backend
	${INSTALL} -m 755 *.so $(DESTDIR)${PREFIX}/backend

protocols: $(OBJS)

.SUFFIXES: .so

.c.so:
	${CC} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} $< -o $@

.PHONY: clean distclean

clean:
	${RM} -f *.so

distclean: clean
	${RM} -f Makefile version.c.last
