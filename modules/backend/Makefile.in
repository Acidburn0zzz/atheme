CC		= @CC@
RM		= @RM@
MV		= @MV@
CP		= @CP@
INSTALL		= @INSTALL@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datadir		= @datadir@
sysconfdir	= @sysconfdir@
libdir		= @libdir@
sbindir		= @sbindir@
localstatedir	= @localstatedir@
DOCDIR		= @DOCDIR@
MODDIR		= @MODDIR@
SHAREDIR	= @SHAREDIR@
BIN		= atheme@EXEEXT@
MKDEP		= @MKDEP@
PICFLAGS	= @PICFLAGS@
CFLAGS		= @CFLAGS@ -I../../include @PGINC@

LIBS		= @LIBS@ @PQLIB@
LDFLAGS		= @LDFLAGS@
CPPFLAGS	= @CPPFLAGS@

default: all

BASE_SRCS = flatfile.c @POSTGRESQL_C@

SRCS = ${BASE_SRCS}

OBJS = ${SRCS:.c=.so}

all: protocols

build: all

install: build
	${INSTALL} -d $(DESTDIR)${MODDIR}/modules/backend
	${INSTALL} -m 755 *.so $(DESTDIR)${MODDIR}/modules/backend

protocols: $(OBJS)

.SUFFIXES: .so

.c.so:
	${CC} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} $< -o $@

.PHONY: depend clean distclean
# This sed command sucks but I don't know a better way -- jilles
depend:
	${MKDEP} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} ${BASE_SRCS} | sed -e 's/\.o:/.so:/' > .depend

clean:
	${RM} -f *.so

distclean: clean
	${RM} -f Makefile version.c.last

include .depend
