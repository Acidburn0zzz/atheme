CC		= @CC@
RM		= @RM@
MV		= @MV@
CP		= @CP@
INSTALL		= @INSTALL@
PREFIX		= @prefix@
BIN		= atheme@EXEEXT@
MKDEP		= @MKDEP@ -DPREFIX=\"@prefix@\" -I../../include @PGINC@ @MYINC@
PICFLAGS	= @PICFLAGS@
CFLAGS		= @CFLAGS@ -I../../include @PGINC@ @MYINC@

VERSION		= 0.1

LIBS		= @LIBS@ @PQLIB@
LDFLAGS		= @LDFLAGS@
CPPFLAGS	= @CPPFLAGS@

default: all

BASE_SRCS = 		\
	main.c		\
	akick.c		\
	ban.c		\
	clear.c		\
	clear_bans.c	\
	clear_users.c	\
	close.c		\
	drop.c		\
	flags.c		\
	ftransfer.c	\
	halfop.c	\
	help.c		\
	hold.c		\
	info.c		\
	invite.c	\
	kick.c		\
	list.c		\
	mark.c		\
	op.c		\
	recover.c	\
	register.c	\
	set.c		\
	status.c	\
	taxonomy.c	\
	topic.c		\
	version.c	\
	voice.c		\
	why.c		\
	xop.c

SRCS = ${BASE_SRCS}

OBJS = ${SRCS:.c=.so}

all: modules

build: all

install: build
	${INSTALL} -d ${PREFIX}/modules/chanserv
	${INSTALL} -m 755 *.so ${PREFIX}/modules/chanserv

modules: $(OBJS)

.SUFFIXES: .so

.c.so:
	${CC} ${PICFLAGS} ${CPPFLAGS} ${CFLAGS} $< -o $@

.PHONY: clean distclean

clean:
	${RM} -f *.so

distclean: clean
	${RM} -f Makefile version.c.last
